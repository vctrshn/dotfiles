# Make arrow keys behave like ZSH
"\e[A":history-substring-search-backward
"\e[B":history-substring-search-forward

# Use Vim keybindings
set editing-mode vi
set keymap vi-command
set show-mode-in-prompt on
set vi-ins-mode-string "\1\e[38;5;1m\2❯\1\e[38;5;3m\2❯\e[38;5;10m\2❯\1\e[0m\e[6 q\2"
set vi-cmd-mode-string "\1\e[38;5;1m\2❯\1\e[38;5;3m\2❯\e[38;5;10m\2❯\1\e[0m\e[2 q\2"

# List completions immediately instead of ringing bell
set show-all-if-ambiguous on
set show-all-if-unmodified on

# Case-insensitive completion
set completion-ignore-case on

# Enable bracketed paste
set enable-bracketed-paste on

# Colors when using tab-completion
set colored-stats on

# Faster timeout, so that hitting Esc to switch to command mode doesn't take
# forever
set keyseq-timeout 50
